<div class="container">
  <div class="row">
    <div class="col mx-auto">

      <div class="row py-5">
        <h3><%= current_admin.ward.ward_name %> 病棟　看護師出勤登録（日勤）　</h3>
      </div>


      <div class="row p-5 shadow">
          <%= form_with model: @nurses, url: admin_nurses_edit_path, method: :PATCH, local:true do |f| %>
        <table class="table p-5">
          <thead>
            <tr>
              <th>登録看護師名</th>
              <th>勤務選択</th>
            </tr>
          </thead>

            <% @nurses.each do |nurse| %>
            <tbody>
              <tr>
                <td><%= nurse.name %></td>
                <td>
                  <%= f.fields_for "nurses[]", nurse do |i| %>
                    <%= i.radio_button :attendance, :true %>
                    <%= i.label :attendance, "出勤" %>&emsp;
                    <%= i.radio_button :attendance, :false %>
                    <%= i.label :attendance, "休日" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
            <% end %>

        </table>
            <%= f.submit "編集内容を保存", class: "btn btn-sm btn-secondary" %>
          <% end %>
      </div>


    </div>
  </div>
</div>
