<div class="container">
  <div class="row">
    <div class="col mx-auto">

      <div class="row py-5">
        <h3>スケジュールへのレビュー
          <small class="text-muted">  </small>
        </h3>
      </div>

      <div class="row p-5 shadow">
        <div class="lead">from <%= current_nurse.name %> to <%= @schedule.nurse.name %></div>
        <div class="row p-5">
        <%= form_with model:[@schedule,@review], local:true do |f| %>
          <div class="form-group">
            <%= f.label :review, "レビュー内容" %>
            <%= f.text_field :review, class: "form-control" %>
          </div>
        </div>

        <div class="row p-5">
            <%= f.hidden_field :reviewer_nurse_id, value: current_nurse.id %>
            <%= f.submit "投稿", class: "btn btn-dark col-3" %>
        </div>
        <% end %>
      </div>


    </div>
  </div>
</div>
