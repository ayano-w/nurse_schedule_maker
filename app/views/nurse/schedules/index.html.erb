          <div class="row border-bottom">
            <div class="col-1">
              患者名
            </div>
            <div class="col-10">
  
            </div>
            <div class="col-1"></div>
          </div>
          <!--スケジュール中身、１患者さん１行表示される-->
          <% schedule.task_lists.each do |task_list| %>
          <div class="row border-bottom">
            <div class="col-1">
              <%= task_list.patient.name %>
            </div>
            <div class="col-9">スケジュール</div>
            <div class="col-2">
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
      
    </div>
