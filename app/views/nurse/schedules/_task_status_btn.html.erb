<% if (controller.action_name == "show") && (task_list.schedule.nurse_id == current_nurse.id) %>         
<span class="small">
  <% if task.status == true %>
    <%= link_to update_status_task_list_task_path(task_list.id, task), method: :PATCH, class: 'task_status_link' do %>
       <i class="far fa-square"></i>
    <% end %>
  <% else %>
    <%= link_to update_status_task_list_task_path(task_list.id, task), method: :PATCH, class: 'task_status_link' do %>
       <i class="far fa-check-square"></i>
    <% end %>
  <% end %>
</span>
<% end %>
